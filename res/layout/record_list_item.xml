<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/list_subject_text"
    	android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/record_item_name"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        style="@style/list_subject_name" />
	    	
	    <TextView
		    android:id="@+id/record_item_credits"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    style="@style/list_subject_credits" />
    </LinearLayout>

	<TextView
	    android:id="@+id/record_item_grade"
	    android:layout_width="wrap_content"
	    style="@style/list_subject_grade"
	    android:layout_height="wrap_content" />
		
</LinearLayout>