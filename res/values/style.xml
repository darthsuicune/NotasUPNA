<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="activity">
        <item name="android:layout_width">fill_parent</item>
    	<item name="android:layout_height">fill_parent</item>
    	<item name="android:orientation">vertical</item>
    	<item name="android:background">#222222</item>
    </style>
    
    <!-- Style definition for the university logo -->
    <style name="upna_logo">
        <item name="android:src">@drawable/upna_logo</item>
    </style>
    <style name="upna_logo_white">
        <item name="android:src">@drawable/upna_logo_white</item>
    </style>
    
    <!-- Style definitions for the pseudo-"action bar" -->
    <style name="action_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#111111</item>
    </style>
    <style name="action_bar_logo" parent="upna_logo_white">
        <item name="android:layout_width">42dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="action_bar_logo_back" parent="action_bar_logo">
        <item name="android:layout_width">40dp</item>        
    </style>
    <style name="action_bar_icon">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="action_bar_title">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:maxLines">1</item>
    </style>
    
    <!-- Style definition for the login screen -->
    <style name="login_block">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="login_text" parent="login_block">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>
    <style name="login_upna_logo" parent="upna_logo_white">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>        
    </style>
    <style name="login_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:ems">10</item>
    </style>
    <style name="login_username" parent="login_edittext">
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/login_username_hint</item>
    </style>
    <style name="login_password" parent="login_edittext">
        <item name="android:hint">@string/login_password_hint</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="login_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Style definitions for the header present at the record screen -->
    <style name="record_header">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="record_header_student">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#DDDDDD</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="record_header_info" parent="record_header_student">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Style definitions for the items in the expandable list - groups -->
    <style name="list_plan">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
    </style>
	<style name="list_plan_name" parent="list_plan">
        <item name="android:textSize">14sp</item>
	</style>
	<style name="list_plan_center" parent="list_plan">
        <item name="android:textSize">10sp</item>
	</style>
	<style name="list_plan_studies" parent="list_plan">
        <item name="android:textSize">12sp</item>
	</style>
	<style name="list_plan_credits" parent="list_plan">
	    <item name="android:gravity">left</item>
	    <item name="android:textSize">12sp</item>
	</style>
	
	<!-- Style definitions for the items in the expandable list - childs -->
	<style name="list_subject">
	    <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">15dp</item>
    </style>
	<style name="list_subject_text" parent="list_subject">
        <item name="android:layout_weight">1</item>
	</style>
	<style name="list_subject_name" parent="list_subject">
	    <item name="android:paddingTop">2dp</item>
	    <item name="android:gravity">center_vertical</item>
		<item name="android:textSize">15sp</item>
		<item name="android:lines">2</item>
	</style>

	<style name="list_subject_credits" parent="list_subject">
	    <item name="android:textSize">12sp</item>
	    <item name="android:paddingBottom">2dp</item>
	</style>
	<style name="list_subject_grade">
	    <item name="android:layout_width">60dp</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:layout_gravity">right</item>
	    <item name="android:padding">10dp</item>
	    <item name="android:textSize">26sp</item>
        <item name="android:textColor">#000000</item>
	    <item name="android:gravity">center</item>
	</style>

    <!-- Style definitions for the subject details screen -->
    <style name="subject_name">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="subject_grid">
        <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:paddingTop">30dp</item>
	    <item name="android:paddingLeft">20dp</item>
	    <item name="android:paddingRight">20dp</item>
	    <item name="android:orientation">vertical</item>
    </style>
    <style name="subject_info_slot">
        <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
        <item name="android:drawableBottom">@android:drawable/divider_horizontal_dim_dark</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="subject_info_predefined_text">
        <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:maxLines">1</item>
	    <item name="android:padding">4dp</item>
	    <item name="android:background">#DDDDDD</item>
	    <item name="android:textColor">#000000</item>
	    <item name="android:gravity">left</item>
	</style>
	<style name="subject_info_details" parent="subject_info_predefined_text">
        <item name="android:layout_width">fill_parent</item>
	    <item name="android:textColor">#222222</item>
	    <item name="android:gravity">right</item>
	</style>
	<style name="subject_info_button" parent="@android:style/Widget.Button">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_gravity">center</item>
	    <item name="android:gravity">center</item>
	</style>
	<style name="subject_info_share" parent="subject_info_button">
	    <item name="android:layout_weight">1</item>
	    <item name="android:layout_height">fill_parent</item>
	</style>
	    	
	<!-- Style definitions for the calls list -->
	<style name="calls_list_text">
	    <item name="android:layout_width">0dip</item>
	    <item name="android:layout_height">fill_parent</item>
	</style>
	<style name="calls_list_call" parent="calls_list_text">
  	    <item name="android:layout_weight">10</item>
	</style>
	<style name="calls_list_call_text" parent="calls_list_call">
  	    <item name="android:gravity">center</item>
	</style>
	<style name="calls_list_grade_name" parent="calls_list_call_text">
  	    <item name="android:layout_weight">11</item>
	</style>
	<style name="calls_list_grade" parent="calls_list_call_text">
  	    <item name="android:layout_weight">3</item>
  	    <item name="android:paddingRight">5dp</item>
	</style>
	<style name="calls_list_call_info">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
</resources>